#!/usr/bin/ruby
require 'pry'

Dir["./lib/**/*.rb"].each do |file|
  require file
end

p1 = Player.new Human, :white
ai = RandomMove

if ARGV.include?('ai')
  p2 = Player.new ai, :black
else
  p2 = Player.new Human, :black
end

game = Game.new p1, p2, ConsoleWriter, Board.new('e1' => Piece.create(:white, :king),
                                                 'h1' => Piece.create(:white, :rook),
                                                 'a8' => Piece.create(:black, :rook) )
game.start
