#!/usr/bin/ruby
require 'pry'

Dir["./lib/**/*.rb"].each do |file|
  require file
end

p1 = Player.new ConsoleReader, :white
ai = AI.new BestSingleMove

if ARGV.include?('ai')
  p2 = Player.new ai, :black
else
  p2 = Player.new ConsoleReader, :black
end

game = Game.new p1, p2, ConsoleWriter, Board.new({:a2 => Piece.create(:white, :pawn), :h7 => Piece.create(:black, :pawn) })
game.start
